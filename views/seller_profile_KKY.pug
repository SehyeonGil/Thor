doctype html
html(lang='en')
    head
        // SITE TITTLE
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        title Seller Profile - Thor
        // PLUGINS CSS STYLE
        link(href='../plugins/jquery-ui/jquery-ui.min.css', rel='stylesheet')
        // Bootstrap
        link(href='../plugins/bootstrap/css/bootstrap.min.css', rel='stylesheet')
        // Font Awesome
        link(href='../plugins/font-awesome/css/font-awesome.min.css', rel='stylesheet')
        // Select 2
        link(href='../plugins/selectbox/select_option1.css', rel='stylesheet')
        // CUSTOM CSS
        link(href='../stylesheets/style_HNH.css', rel='stylesheet')
        link(href='../stylesheets/uploadFile_KKY.css', rel='stylesheet')
        // FAVICON
        link(href='../img/favicon.png', rel='shortcut icon')
    body.body-wrapper

        include components/topHeader
        include components/navBar_KSW

        //
          ==================================
          =            User Profile            =
          ===================================
        section.user-profile.section
            .container
                .row
                    include components/sideBarSeller_KKY.pug
                    .col-md-10.offset-md-1.col-lg-9.offset-lg-0
                        // Edit Profile Welcome Text
                        .widget.welcome-message
                            h2 매장 관리
                            p 등록한 매장의 타이틀, 소개글, 서비스 종류, 운영 시간, 주소, 이미지를 관리할 수 있습니다.
                        // Edit Personal Info
                        .widget.personal-info
                            h3.widget-header.user 매장 타이틀 / 소개 / 서비스 종류 / 운영 시간
                            form(action='#')
                                .form-group
                                    label(for='title') 매장 타이틀
                                    input#title.form-control(type='text', value=seller.shopName)
                                .form-group
                                    label(for='intro') 매장 소개
                                    textarea#intro.form-control(rows='10', placeholder=seller.text)
                                .form-group
                                    label(for='time') 운영 시간
                                    #time.row
                                        .btn-group(data-toggle='buttons', style='margin:auto;')
                                            if(seller.optionMon==='on')
                                                label.btn-sm.btn.btn-week.focus.active
                                                    input(type='checkbox', autocomplete='off', checked='checked')
                                                    | 월
                                            else
                                                label.btn-sm.btn.btn-week
                                                    input(type='checkbox', autocomplete='off')
                                                    | 월
                                            if(seller.optionTues === 'on')
                                                label.btn-sm.btn.btn-week.focus.active
                                                    input(type='checkbox', autocomplete='off', checked='checked')
                                                    | 화
                                            else
                                                label.btn-sm.btn.btn-week
                                                    input(type='checkbox', autocomplete='off')
                                                    | 화
                                            if(seller.optionWen === 'on')
                                                label.btn-sm.btn.btn-week.focus.active
                                                    input(type='checkbox', autocomplete='off', checked='checked')
                                                    | 수
                                            else
                                                label.btn-sm.btn.btn-week
                                                    input(type='checkbox', autocomplete='off')
                                                    | 수
                                            if(seller.optionThur === 'on')
                                                label.btn-sm.btn.btn-week.focus.active
                                                    input(type='checkbox', autocomplete='off', checked='checked')
                                                    | 목
                                            else
                                                label.btn-sm.btn.btn-week
                                                    input(type='checkbox', autocomplete='off')
                                                    | 목
                                            if(seller.optionFri === 'on')
                                                label.btn-sm.btn.btn-week.focus.active
                                                    input(type='checkbox', autocomplete='off', checked='checked')
                                                    | 금
                                            else
                                                label.btn-sm.btn.btn-week
                                                    input(type='checkbox', autocomplete='off')
                                                    | 금
                                            if(seller.optionSat === 'on')
                                                label.btn-sm.btn.btn-week.focus.active
                                                    input(type='checkbox', autocomplete='off', checked='checked')
                                                    | 토
                                            else
                                                label.btn-sm.btn.btn-week
                                                    input(type='checkbox', autocomplete='off')
                                                    | 토
                                            if(seller.optionSun === 'on')
                                                label.btn-sm.btn.btn-week.focus.active
                                                    input(type='checkbox', autocomplete='off', checked='checked')
                                                    | 일
                                            else
                                                label.btn-sm.btn.btn-week
                                                    input(type='checkbox', autocomplete='off')
                                                    | 일
                                        .row.col-md-3.justify-content-center
                                            input#txtopertime1.form-control.col-md-5(type='text', onkeypress='onlyNumber();', value=seller.optionTime1)
                                            h5(style='margin-top:10px') :
                                            input#txtopertime2.form-control.col-md-5(type='text', value=seller.optionTime2)
                                label(for='service') 서비스 종류
                                // Checkbox
                                #service.form-check
                                    label.form-check-label(for='hide-profile1', style='color: #000; font-weight: 500; font-size: 16px;')
                                        if(seller.optionDelivery === 'on')
                                            input#hide-profile1.form-check-input(type='checkbox', value='', checked='checked')
                                        else
                                            input#hide-profile1.form-check-input(type='checkbox', value='')
                                        | 							배달 서비스
                                    label.form-check-label(for='hide-profile2', style='color: #000; font-weight: 500; font-size: 16px;')
                                        if(seller.optionPacking === 'on')
                                            input#hide-profile2.form-check-input(type='checkbox', value='', checked='checked')
                                        else
                                            input#hide-profile2.form-check-input(type='checkbox', value='')
                                        | 							포장 서비스
                                    label.form-check-label(for='hide-profile3', style='color: #000; font-weight: 500; font-size: 16px;')
                                        if(seller.optionVisit === 'on')
                                            input#hide-profile3.form-check-input(type='checkbox', value='', checked='checked')
                                        else
                                            input#hide-profile3.form-check-input(type='checkbox', value='')
                                        | 							방문 서비스
                                // Submit button
                                button.btn.btn-transparent Save My Changes
                        // Change Password
                        .widget.change-password
                            h3.widget-header.user 매장 주소
                            form(action='#')
                                .row
                                    label#addresslabel.col-lg-2.col-md-2.col-sm-2(for='store_add') 주소
                                    input#store_add.form-control.col-lg-7.col-md-7.col-sm-7(type='text', name='address', required='', readonly='', value=seller.address)
                                    button.col-lg-2.col-md-2.col-sm-2(type='button', onclick='goPopup()', style='border-radius:30px; color:#ffffff; height:40px;margin: 5px 10px 5px 10px;vertical-align: middle;background-color:gray;border-style:none;') 찾기
                                    input#entX(type='hidden', value=seller.location.coordinates[0], name='x', required='', readonly='')
                                    input#entY(type='hidden', value=seller.location.coordinates[1], name='y', required='', readonly='')
                                    input#siNm(type='hidden', name='siNm', required='   ', readonly='')
                                #map.col-lg-12.block(style='height:400px; margin: 50px auto;')
                                // Submit Button
                                button.btn.btn-transparent Change Password
                        // Change Email Address
                        .widget.change-email.mb-0
                            h3.widget-header.user 매장 사진
                            form(action='#')
                                .page.justify-content-center(style='margin-top: 10px;')
                                    // Our File Inputs
                                    .wrap-custom-file
                                        input#image1(type='file', name='store_pic', accept='.gif, .jpg, .png, .jpeg')
                                        label(for='image1')
                                            span Select Image
                                            i.fa.fa-plus-circle
                                    .wrap-custom-file
                                        input#image2(type='file', name='store_pic', accept='.gif, .jpg, .png, .jpeg')
                                        label(for='image2')
                                            span Select Image
                                            i.fa.fa-plus-circle
                                    .wrap-custom-file
                                        input#image3(type='file', name='store_pic', accept='.gif, .jpg, .png, .jpeg')
                                        label(for='image3')
                                            span Select Image
                                            i.fa.fa-plus-circle
                                    .wrap-custom-file
                                        input#image4(type='file', name='store_pic', accept='.gif, .jpg, .png, .jpeg')
                                        label(for='image4')
                                            span Select Image
                                            i.fa.fa-plus-circle
                                    // End Page Wrap
                                button.btn.btn-transparent(style='margin-top:10px') Change email

        //
          ============================
          =            Footer            =
          =============================
        include components/footer_KSW

