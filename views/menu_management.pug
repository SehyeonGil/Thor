doctype html
html(lang='en')
    head
        // SITE TITTLE
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        title Menu Management - Thor
        // PLUGINS CSS STYLE
        link(href='../plugins/jquery-ui/jquery-ui.min.css', rel='stylesheet')
        // Bootstrap
        link(href='../plugins/bootstrap/css/bootstrap.min.css', rel='stylesheet')
        // Font Awesome
        link(href='../plugins/font-awesome/css/font-awesome.min.css', rel='stylesheet')
        // Select 2
        link(href='../plugins/selectbox/select_option1.css', rel='stylesheet')
        // CUSTOM CSS
        link(href='../stylesheets/style_HNH.css', rel='stylesheet')
        link(href='../stylesheets/uploadFile_KKY.css', rel='stylesheet')
        link(href='../stylesheets/menuManagement_KKY.css', rel='stylesheet')
        // FAVICON
        link(href='../img/favicon.png', rel='shortcut icon')
    body.body-wrapper
        include components/topHeader
        include components/navBar_KSW
        //
          ==================================
          =            User Profile            =
          ===================================
        section.user-profile.section
            .container
                .row
                    include components/sideBarSeller_KKY.pug
                    .col-md-10.offset-md-1.col-lg-9.offset-lg-0
                        // Edit Profile Welcome Text
                        .widget.welcome-message
                            h2 메뉴 관리
                            p 등록한 메뉴의 판매여부, 메뉴이름, 가격, 해쉬태그등 메뉴들의 상세정보를 관리할 수 있습니다.
                        section.section.offers
                            .container
                                .row
                                    .col-md-12
                                        .block
                                            .col-xs-12.addMenu
                                                button.btn.btn-block.btn-transparent(type="button", onclick="location.href='./register_menu'") 메뉴 등록
                                            // Tab panes
                                            .tab-content
                                                // Today's Top Offer
                                                #top-offer.tab-pane.active(role='tabpanel')
                                                    .row
                                                        // offer 01
                                                        - for(var i=0;i<menu.length;i++)
                                                            .col-md-10.offset-md-1.col-lg-6.offset-lg-0
                                                                // deal card
                                                                label.switch
                                                                    if(menu[i].onoff===false)
                                                                        input(type='checkbox', onclick='onoffChange(this.value,this.checked)', value=menu[i]._id)
                                                                    else
                                                                        input(type='checkbox', onclick='onoffChange(this.value,this.checked)', checked='checked', value=menu[i]._id)
                                                                    span.slider.round
                                                                // 버튼 클릭 메뉴상세정보로
                                                                .deal-item.bg-light(onclick="location.href='#'", style='cursor:pointer;')
                                                                    .media
                                                                        // Image Content
                                                                        .img-content.align-self-center
                                                                            a(href='/menu/'+menu[i]._id)
                                                                                // Card Image
                                                                                img(src='../'+menu[i].imageMenu[0].image_url, alt=menu[i].imageMenu[0].image_name)
                                                                            // Saving
                                                                            //span
                                                                                i.fa.fa-star
                                                                                i.fa.fa-star
                                                                                i.fa.fa-star
                                                                                i.fa.fa-star
                                                                                i.fa.fa-star-o
                                                                                rater.rater 4 (185)
                                                                        // Media Body
                                                                        .media-body
                                                                            // Card Title
                                                                            h5 메뉴이름:
                                                                                = menu[i].title
                                                                            h6 가격:
                                                                                = menu[i].price
                                                                            //h6 메뉴이용시간:30분
                                                                            h6
                                                                                - for(var j=0;j<menu[i].hashtag.length;j++)
                                                                                    = menu[i].hashtag[j]
        include components/footer_KSW
        // JAVASCRIPTS
        script(src='../plugins/jquery/jquery.min.js')
        script(src='../plugins/jquery-ui/jquery-ui.min.js')
        script(src='../plugins/tether/js/tether.min.js')
        script(src='../plugins/raty/jquery.raty-fa.js')
        script(src='../plugins/bootstrap/js/bootstrap.min.js')
        script(src='../plugins/selectbox/jquery.selectbox-0.1.3.min.js')
        script(src='../plugins/owl-carousel/owl.carousel.min.js')
        script(src='../plugins/fancybox/jquery.fancybox.pack.js')
        script(src='../plugins/smoothscroll/SmoothScroll.min.js')
        script(src='../plugins/datepicker/bootstrap-datepicker.min.js')
        script(src='../plugins/bootstrap-notify/bootstrap-notify.min.js')
        script(src='../js/custom.js')
        script(src='../js/googleMap_KSW.js')
        script(src='../js/menu_management_GSH.js')
